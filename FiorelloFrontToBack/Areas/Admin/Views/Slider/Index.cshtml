@model List<Slider>
    @{
        ViewData["Title"] = "Index";
    }
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <a class="btn btn-primary" asp-controller="Slider" asp-action="Create">Create</a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Slider
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Slider slide in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="~/img/@slide.Image"/>
                                    </td>
                                    <td>
                                        <a class="btn btn-success" asp-controller="Slider" asp-action="Detail" asp-route-id="@slide.Id">Detail</a>
                                        <a class="btn btn-primary" asp-controller="Slider" asp-action="Update" asp-route-id="@slide.Id">Update</a>
                                        <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@slide.Id">Delete </a>
                                    </td>
                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
