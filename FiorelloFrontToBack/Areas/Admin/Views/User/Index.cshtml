@model List<UserVM>
@{ ViewData["Title"] = "Index"; }

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Fullname
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Username
                                </th>
                                <th>
                                    Role
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Settings
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserVM item in Model)
                            {
                <tr>
                    <td>
                        @item.Fullname
                    </td>
                    <td>
                        @item.Email
                    </td>
                    <td>
                        @item.Username
                    </td>
                    <td>
                        @item.Role
                    </td>
                            
                    @if (!item.Status)
                    {
    <td style="color:lawngreen">
        Active
    </td> }
                    else
                    {
    <td style="color:red">
        Deactive
    </td>}
                <td>
                    @if (item.Id == ViewBag.currentUserId)
                    {

                    }
                    else
                    {
                @if (!item.Status)
                {
                <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-danger">
                    Deactivate
                </a> }
                                    else
                                    {
                <a asp-action="ChangeStatus" asp-route-id="@item.Id" class="btn btn-success">
                    Activate
                </a>}
                                    <a asp-action="ResetPassword" asp-route-id="@item.Id" class="btn btn-danger">
                                        ChangePassword
                                    </a>}
                    <a asp-action="ChangeRole" asp-route-id="@item.Id" class="btn btn-primary">
                        ChangeRole
                    </a>

                </td>         
                </tr>}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

