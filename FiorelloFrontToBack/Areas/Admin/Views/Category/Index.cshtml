@model List<Category>
@{
    ViewData["Title"] = "Index";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Categories</h4>
            <a class="btn btn-primary" asp-controller="Category" asp-action="Create">Create</a>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                Category
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category ct in Model)
                        {
                            <tr>
                                <td>
                                    @ct.Name
                                </td>
                                <td>
                                    <a class="btn btn-success" asp-controller="Category" asp-action="Detail" asp-route-id="@ct.Id">Detail</a>
                                    <a class="btn btn-primary" asp-controller="Category" asp-action="Update" asp-route-id="@ct.Id">Update</a>
                                    <a class="btn btn-danger" asp-controller="Category" asp-action="Delete" asp-route-id="@ct.Id">Delete </a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>